    "version": "0.2.0",
    "configurations": [

       {
            "name": "Run Testbed",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\testbed.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Build All"
        },

        {
            "name": "(Linux) Launch",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "args": [],
            "cwd": "${workspaceFolder}/bin/",
            "environment": [],
            "program": "${workspaceFolder}/bin/testbed",
        },

         {
            "name": "Debug Testbed (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/testbed.exe",
            "cwd": "${workspaceFolder}/testbed",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "args": [],
            "stopAtEntry": false,
            "externalConsole": true,
            "environment": [],
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "enable pretty printing",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}